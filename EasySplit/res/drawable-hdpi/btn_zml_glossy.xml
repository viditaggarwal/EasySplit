<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#c53e2b" />
             <gradient 
               	 android:angle="-90"   
                 android:startColor="#270606"
                 android:endColor="#270106"  />            
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#8B5A00" />
             <solid  android:color="#8B5A00"/>       
         </shape>
     </item>	
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#c53e2b" />
             <gradient 
               	 android:angle="-90"   
                 android:startColor="#270106"
                 android:endColor="#270606" />            
         </shape>
     </item>
</selector>